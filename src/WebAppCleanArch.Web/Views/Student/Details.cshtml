@model WebAppCleanArch.Domain.Entities.Student

@{
    ViewData["Title"] = "Detail Siswa";
}

<h2>Detail Siswa</h2>

<div><h4>@ViewBag.Message</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2"> Nama
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Usia
        </dt>
        <dd class="col-sm-10">
            @Model.Age
        </dd>
    </dl>
</div>

<h4>Courses Taken</h4>

@if (Model.Courses.Any())
{
    <ul>
        @foreach (var course in Model.Courses)
        {
            <li>@course.CourseName</li>
        }
    </ul>
}
else
{
    <p><em>This student has not taken any courses.</em></p>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Kembali ke Daftar</a>
</div>